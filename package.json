{
  "name": "drive-vector-sync-cf",
  "version": "1.0.0",
  "description": "Google Drive to Cloudflare Vectorize Sync System on Cloudflare Workers",
  "main": "src/index.ts",
  "type": "module",
  "workspaces": [
    "frontend"
  ],
  "scripts": {
    "predev": "npm run build:frontend-assets",
    "dev": "wrangler dev",
    "predeploy": "npm run build:frontend-assets",
    "deploy": "wrangler deploy",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "type-check": "tsc --noEmit",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "eslint src --ext .ts",
    "prepare": "husky",
    "frontend:dev": "npm -w frontend run dev",
    "frontend:build": "npm -w frontend run build",
    "frontend:preview": "npm -w frontend run preview",
    "frontend:lint": "npm -w frontend run lint",
    "build:frontend-assets": "npm -w frontend run build && node ./scripts/build-frontend-assets.mjs"
  },
  "keywords": [
    "cloudflare-workers",
    "rag",
    "vector-database",
    "google-drive",
    "vectorize",
    "embeddings"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20241127.0",
    "@types/node": "24.10.1",
    "@typescript-eslint/eslint-plugin": "^8.17.0",
    "@typescript-eslint/parser": "^8.17.0",
    "@vitest/coverage-v8": "^4.0.9",
    "eslint": "^9.15.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6",
    "prettier": "^3.3.3",
    "typescript": "^5.7.2",
    "vitest": "^4.0.8",
    "wrangler": "^4.48.0"
  },
  "dependencies": {
    "@googleapis/drive": "^19.2.0",
    "openai": "^6.9.0",
    "pdfjs-dist": "^4.10.38"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write",
      "vitest related --run --environment jsdom"
    ]
  }
}
